{
  "manifest_version": 3,
  "name": "FAP Beautifier",
  "version": "2.0.3",
  "description": "FPT University Academic Portal Beautifier",
  "permissions": ["activeTab", "scripting", "identity", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "/media/icons/16.png",
    "32": "/media/icons/32.png",
    "48": "/media/icons/48.png",
    "64": "/media/icons/64.png",
    "128": "/media/icons/128.png",
    "256": "/media/icons/256.png",
    "512": "/media/icons/512.png"
  },
  "host_permissions": [
    "*://fap.fpt.edu.vn/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": [
        "*://fap.fpt.edu.vn/*"
      ]
    }
  ]
}
 